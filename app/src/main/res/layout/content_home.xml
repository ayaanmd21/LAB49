<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/padding_30dp"
        android:layout_marginLeft="@dimen/padding_30dp"
        android:layout_marginTop="@dimen/margin_175dp"
        android:layout_marginEnd="@dimen/padding_30dp"
        android:layout_marginRight="@dimen/padding_30dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/ic_logo" />

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="@dimen/margin_32dp"
        android:layout_height="@dimen/margin_32dp"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_10dp"
        android:visibility="gone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/padding_30dp"
        android:layout_marginLeft="@dimen/padding_30dp"
        android:layout_marginEnd="@dimen/padding_30dp"
        android:layout_marginRight="@dimen/padding_30dp"
        android:layout_marginBottom="@dimen/margin_83dp"
        android:text="@string/let_s_go" />

    <!--    <View-->
    <!--        android:id="@+id/progress_view"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:alpha=".7"-->
    <!--        android:background="@color/colorBackgroundDarkGrey"/>-->


</RelativeLayout>